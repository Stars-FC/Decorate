<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Banner style-->
    <style name="BannerDefaultStyle">
        <!--<item name="android:layout_marginTop">10dp</item>-->
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">3000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">@android:color/transparent</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/bga_banner_selector_point_hollow</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示器的位置 -->
        <item name="banner_indicatorGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">800</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">10sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
        <!-- 加载网络数据时覆盖在BGABanner最上层的占位图 -->
        <!--<item name="banner_placeholderDrawable">@drawable/xiaoguotu</item>-->
        <item name="banner_placeholderDrawable">@drawable/banner_default_icon</item>
    </style>

    <style name="EtStyle">
        <!--<EditText-->
        <!--android:paddingLeft="10px"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="90px"-->
        <!--android:layout_marginTop="20px"-->
        <!--android:background="@null"-->
        <!--android:gravity="center_vertical"-->
        <!--android:hint="请输入您的手机号"-->
        <!--android:textSize="24px"/>-->
        <item name="android:paddingLeft">20px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90px</item>
        <item name="android:layout_marginTop">20px</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">24px</item>
    </style>

    <!--单选按钮的统一样式-->
    <style name="bottom_tag_style">
        <!-- Customize your theme here. -->
        <!--android:paddingBottom="1px"-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">1px</item>
        <item name="android:paddingBottom">10px</item>
        <item name="android:textColor">@drawable/bottom_textcolor_drawable_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    //订单页面 tab style
    <style name="MyTabLayoutTextAppearance"
           parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#545051</item>
    </style>

</resources>
