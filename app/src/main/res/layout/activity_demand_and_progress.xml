<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.ygc.estatedecoration.activity.home.DemandAndProgressActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">
        <!--标题栏-->
        <ImageView
            android:id="@+id/back"
            android:layout_width="62px"
            android:layout_height="62px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:paddingLeft="10px"
            android:paddingRight="20px"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher"/>

        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/tablayout"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="match_parent"
            app:xTabIndicatorColor="#4EBE65"
            app:xTabIndicatorHeight="1.5dp"
            app:xTabIndicatorWidth="50dp"
            app:xTabMode="fixed"
            app:xTabSelectedTextColor="#4EBE65"
            app:xTabSelectedTextSize="17dp"
            app:xTabTextColor="#000000"
            app:xTabTextSize="17dp"/>

        <ImageView
            android:id="@+id/iv_follow"
            android:layout_width="62px"
            android:layout_height="62px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:paddingLeft="10px"
            android:paddingRight="20px"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</LinearLayout>
