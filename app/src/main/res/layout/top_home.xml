<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="270px"
              android:background="@color/recyclerBc"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17px"
        android:layout_marginLeft="13px"
        android:layout_marginRight="13px"
        android:layout_marginTop="17px"
        android:background="@color/white"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:padding="10px">

        <LinearLayout
            android:id="@+id/my_store"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/touxiangfu"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="我的店铺"
                android:textColor="@color/black"
                android:textSize="24px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/need_Analysis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="需求大厅"
                android:textColor="@color/black"
                android:textSize="24px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trade_manage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="交易管理"
                android:textColor="@color/black"
                android:textSize="24px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_visitor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="我的访客"
                android:textColor="@color/black"
                android:textSize="24px"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75px"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_demand"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30px"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/iv_demand"
            android:gravity="center"
            android:text="需求推荐"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/line"
        android:layout_height="1px"/>

</LinearLayout>