<?xml version="1.0" encoding="utf-8"?>
<!--drawlayout左侧布局-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:background="@color/whitesmoke"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="筛选"
            android:textSize="24px"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="装修类型"
            android:textColor="@color/black"
            android:textSize="24px"/>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/missionType_tagFlowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:padding="5dp"
            zhy:max_select="1"/>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150px"
                android:layout_height="60px"
                android:layout_marginLeft="20px"
                android:background="@color/whitesmoke"
                android:gravity="center"
                android:text="家装"
                android:textSize="22px"/>

            <TextView
                android:layout_width="150px"
                android:layout_height="60px"
                android:layout_marginLeft="20px"
                android:background="@color/whitesmoke"
                android:gravity="center"
                android:text="工装"
                android:textSize="22px"/>

            <TextView
                android:layout_width="150px"
                android:layout_height="60px"
                android:layout_marginLeft="20px"
                android:background="@color/whitesmoke"
                android:gravity="center"
                android:text="家装"
                android:textSize="22px"/>

        </LinearLayout>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="房屋现状"
            android:textColor="@color/black"
            android:textSize="24px"/>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/constructionStatusQuo_tagFlowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:padding="5dp"
            zhy:max_select="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="装修时间"
            android:textColor="@color/black"
            android:textSize="24px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/start_time_et"
                android:layout_width="195px"
                android:layout_height="50px"
                android:background="@drawable/bg_user_search_item"
                android:gravity="center"
                android:hint="招标开始时间"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text=""
                android:textColor="#3f3e3e"
                android:textSize="22px"/>

            <View
                android:layout_width="20px"
                android:layout_height="2px"
                android:layout_marginLeft="10px"
                android:background="@color/bigline"/>

            <EditText
                android:id="@+id/end_time_et"
                android:layout_width="195px"
                android:layout_height="50px"
                android:layout_marginLeft="10px"
                android:background="@drawable/bg_user_search_item"
                android:gravity="center"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:hint="招标结束时间"
                android:text=""
                android:textColor="#3f3e3e"
                android:textSize="22px"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="房屋面积（平方米）"
            android:textColor="@color/black"
            android:textSize="24px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/minBuildingArea_et"
                android:layout_width="195px"
                android:layout_height="50px"
                android:background="@drawable/bg_user_search_item"
                android:gravity="center"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="最小建筑面积"
                android:inputType="numberDecimal"
                android:textColor="#3f3e3e"
                android:textSize="22px"/>

            <View
                android:layout_width="20px"
                android:layout_height="2px"
                android:layout_marginLeft="10px"
                android:background="@color/bigline"/>

            <EditText
                android:id="@+id/maxBuildingArea_et"
                android:layout_width="195px"
                android:layout_height="50px"
                android:layout_marginLeft="10px"
                android:background="@drawable/bg_user_search_item"
                android:gravity="center"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="最大建筑面积"
                android:inputType="numberDecimal"
                android:textSize="22px"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="当前位置"
            android:textColor="@color/black"
            android:textSize="24px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/address_ll"
                android:layout_width="wrap_content"
                android:layout_height="61px"
                android:layout_marginLeft="20px"
                android:paddingLeft="8px"
                android:paddingRight="8px"
                android:background="@color/line"
                android:gravity="center"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25px"
                    android:layout_height="25px"
                    android:src="@drawable/shaixuandingwei"/>

                <TextView
                    android:id="@+id/address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7px"
                    android:background="@null"
                    android:gravity="center"
                    android:text="请选择"
                    android:textSize="22px"
                    android:textColor="#3f3e3e"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/sure_btn"
            android:layout_width="450px"
            android:layout_height="70px"
            android:layout_gravity="center"
            android:layout_marginTop="70px"
            android:background="@drawable/shape_all_my_moneybag"
            android:elevation="2dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="28px"/>
    </LinearLayout>
</ScrollView>