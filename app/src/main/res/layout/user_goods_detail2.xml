<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="600px"
                android:scaleType="centerCrop"
                android:src="@drawable/shang_pin_shu"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="26px"
                android:paddingLeft="22px">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29px"
                    android:text="商品标题商品标题商品标题"
                    android:textColor="@color/black"
                    android:textSize="24px"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6px"
                    android:layout_marginTop="18px"
                    android:text="￥2048"
                    android:textColor="@color/red"
                    android:textSize="24px"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="19px"
                android:background="#f7f7f7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="30px"
                android:paddingLeft="22px"
                android:paddingRight="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评价(32)"
                        android:textColor="@color/black"
                        android:textSize="21px"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看全部评价"
                            android:textColor="@color/colorAccent"
                            android:textSize="21px"/>

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="9px"
                            android:layout_height="21px"
                            android:layout_marginLeft="6px"
                            android:src="@drawable/gengduolv"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38px"
                    android:layout_marginTop="10px"
                    android:gravity="center_vertical">

                    <com.ygc.estatedecoration.widget.CircleImageView
                        android:id="@+id/iv_buyers"
                        android:layout_width="38px"
                        android:layout_height="match_parent"
                        android:src="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="28px"
                        android:gravity="center_vertical"
                        android:text="评价1"
                        android:textColor="@color/black"
                        android:textSize="21px"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <com.ygc.estatedecoration.widget.StarView
                        android:id="@+id/starview"
                        android:layout_width="wrap_content"
                        android:layout_height="22px"
                        app:starCount="5"
                        app:starFill="@drawable/xingxing"
                        app:starImageSize="22px"
                        app:starPadding="5px"
                        app:starStep="5"
                        app:stepSize="Half"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17px"
                    android:text="评语"
                    android:textColor="@android:color/black"
                    android:textSize="21px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="2017.11.28"
                    android:textColor="#a8a8a8"
                    android:textSize="21px"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="19px"
                android:background="#f7f7f7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="134px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="22px"
                android:paddingRight="20px">

                <com.ygc.estatedecoration.widget.CircleImageView
                    android:layout_width="84px"
                    android:layout_height="84px"
                    android:src="@android:color/black"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25px"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_seller_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="店名--店名"
                            android:textColor="@color/black"
                            android:textSize="21px"/>

                        <com.ygc.estatedecoration.widget.StarView
                            android:layout_width="wrap_content"
                            android:layout_height="22px"
                            android:layout_marginLeft="8px"
                            app:starCount="5"
                            app:starFill="@drawable/xingxing"
                            app:starImageSize="22px"
                            app:starPadding="5px"
                            app:starStep="5"
                            app:stepSize="Half"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="99件宝贝"
                        android:textColor="@color/black"
                        android:textSize="21px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15px"
                    android:paddingTop="15px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="进店看看"
                        android:textColor="@color/colorAccent"
                        android:textSize="21px"/>

                    <ImageView
                        android:layout_width="9px"
                        android:layout_height="21px"
                        android:layout_marginLeft="6px"
                        android:src="@drawable/gengduolv"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15px"
                android:background="@color/line"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75px"
                android:gravity="center_vertical"
                android:paddingLeft="22px"
                android:text="商品详情"
                android:textColor="@color/black"
                android:textSize="21px"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="640px"
                android:scaleType="fitXY"
                android:src="@drawable/shang_pin_shu"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="640px"
                android:scaleType="fitXY"
                android:src="@drawable/shang_pin_shu"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="640px"
                android:scaleType="fitXY"
                android:src="@drawable/shang_pin_shu"/>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14px"
        android:layout_marginTop="50px"
        android:src="@drawable/shangfanhui"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="89px">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="129"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="44px"
                    android:layout_height="40px"
                    android:src="@drawable/liuyan"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:text="留言"
                    android:textColor="@android:color/black"
                    android:textSize="17px"/>

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="129"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="44px"
                    android:layout_height="40px"
                    android:src="@drawable/shoucang"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:text="收藏"
                    android:textColor="@android:color/black"
                    android:textSize="17px"/>

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="129"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="44px"
                    android:layout_height="40px"
                    android:src="@drawable/jiagouwuche"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:text="加入购物车"
                    android:textColor="@android:color/black"
                    android:textSize="17px"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_offer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="250"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="@android:color/white"
                android:textSize="26px"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
