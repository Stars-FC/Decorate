<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="317px"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38px"
            android:gravity="center_horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/quanjing_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="105px"
                    android:layout_height="105px"
                    android:src="@drawable/sd"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:text="全景图"
                    android:textColor="#58c56f"
                    android:textSize="21px"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/xiaoguo_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="106px"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="105px"
                    android:layout_height="105px"
                    android:src="@drawable/xiaoguotubiao"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:text="效果图"
                    android:textColor="#58c56f"
                    android:textSize="21px"/>
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="500px"
            android:layout_height="80px"
            android:layout_marginTop="38px"
            android:background="@drawable/shape_all_my_moneybag"
            android:gravity="center"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="26px"/>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>