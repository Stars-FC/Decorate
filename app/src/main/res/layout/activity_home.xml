<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ygc.estatedecoration.widget.NoTouchViewPager
        android:id="@+id/viewPager"
        android:background="@color/recyclerBc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <RadioGroup
        android:elevation="3dp"
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_home_drawable_selector"
            android:gravity="center"
            android:text="首页"/>

        <RadioButton
            android:id="@+id/rb_case"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_home_drawable_selector"
            android:gravity="center"
            android:text="案例"/>

        <RadioButton
            android:id="@+id/rb_manage"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_home_drawable_selector"
            android:gravity="center"
            android:text="管理"/>

        <RadioButton
            android:id="@+id/rb_news"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_home_drawable_selector"
            android:gravity="center"
            android:text="消息"/>
        <RadioButton
            android:id="@+id/rb_my"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_home_drawable_selector"
            android:gravity="center"
            android:text="我的"/>
    </RadioGroup>

</com.zhy.autolayout.AutoLinearLayout>