<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <include layout="@layout/title"
        android:id="@+id/layout_title"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:background="@color/white"
        android:layout_below="@+id/layout_title"
        android:layout_above="@+id/activity_initiating_contract_submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:textSize="40px"
            android:textColor="@color/black_010101"
            android:text="合同内容"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.zhy.autolayout.AutoRelativeLayout>

<Button
    android:gravity="center"
    android:textSize="29px"
    android:text="确认发起合同"
    android:textColor="@color/white"
    android:id="@+id/activity_initiating_contract_submit"
    android:layout_alignParentBottom="true"
    android:background="@color/green_4fbc64"
    android:layout_width="match_parent"
    android:layout_height="89px" />
</com.zhy.autolayout.AutoRelativeLayout>