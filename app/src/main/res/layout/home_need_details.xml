<?xml version="1.0" encoding="utf-8"?>
<!--需求详情页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical">

            <com.ygc.estatedecoration.widget.CircleImageView
                android:id="@+id/iv_customer_icon"
                android:layout_width="66px"
                android:layout_height="66px"
                android:layout_marginLeft="30px"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/iv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/iv_customer_icon"
                android:gravity="center"
                android:text="客户昵称"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="150px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:text="121312311"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20px"
                android:layout_toLeftOf="@+id/tv_order_number"
                android:gravity="center"
                android:text="订单编号："/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:orientation="vertical"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="需求标题"
                android:textColor="@color/black"
                android:textSize="32px"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/orange"
                    android:textSize="32px"/>

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="5,000"
                    android:textColor="@color/orange"
                    android:textSize="32px"/>

                <TextView
                    android:layout_width="100px"
                    android:layout_height="45px"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/shape_empty_home"
                    android:gravity="center"
                    android:text="已托管"
                    android:textColor="@color/forestgreen"/>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65px"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="25px"
                    android:layout_height="25px"
                    android:layout_marginRight="5px"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2017.11.11"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="25px"
                    android:layout_height="25px"
                    android:layout_marginRight="5px"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="辽宁 沈阳"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="25px"
                    android:layout_height="25px"
                    android:layout_marginRight="5px"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="剩5天5个小时"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="家装"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="毛胚"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="210m²"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="77px"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="备注说明"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说明,备注说"/>
        </ScrollView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="52px"
                android:layout_height="52px"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打电话"/>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="52px"
                android:layout_height="52px"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="留言"/>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="报价"/>
    </LinearLayout>

</LinearLayout>