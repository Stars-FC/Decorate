<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:scrollbars="none">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context="com.ygc.estatedecoration.activity.my.CaseEffectPicActivity">


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_marginTop="35px"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:paddingRight="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="效果图标题"
                android:textColor="@android:color/black"
                android:textSize="26px"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16px"
                android:background="@drawable/white_bg3"
                android:hint="请输入标题"
                android:maxLines="1"
                android:paddingLeft="15px"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/black"
                android:textColorHint="#8f8f8f"
                android:textCursorDrawable="@null"
                android:textSize="26px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.ygc.estatedecoration.widget.MaxRecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px">

        </com.ygc.estatedecoration.widget.MaxRecyclerView>

        <ImageView
            android:id="@+id/upload_iv"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:src="@drawable/liangdiantianjia"/>

    </com.zhy.autolayout.AutoLinearLayout>
</ScrollView>

