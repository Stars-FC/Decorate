<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_background"
        android:layout_width="match_parent"
        android:layout_height="368px"
        android:background="@drawable/zhuyebackgrund">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20px"
            android:layout_marginTop="60px"
            android:padding="10px"
            android:src="@drawable/fanhuiwhite"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20px">

            <com.ygc.estatedecoration.widget.CircleImageView
                android:id="@+id/mystore_icon"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerHorizontal="true"
                android:src="@drawable/zhuyetouxiang"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="44px"
                android:layout_marginTop="10px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mystore_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称"
                    android:textColor="@color/white"
                    android:textSize="32px"/>

                <ImageView
                    android:id="@+id/mystore_sex"
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8px"
                    android:layout_marginRight="8px"
                    android:src="@drawable/nan"/>

                <TextView
                    android:id="@+id/mystore_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_team_green"
                    android:gravity="center"
                    android:text="团队"
                    android:textColor="@color/colorAccent"
                    android:textSize="20px"/>
            </LinearLayout>

            <com.ygc.estatedecoration.widget.StarView
                android:id="@+id/mystore_starview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                app:starCount="5"
                app:starFill="@drawable/xingxing"
                app:starHalf="@drawable/xingxing"
                app:starImageSize="25px"
                app:starPadding="5px"
                app:starStep="5"
                app:stepSize="Half"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mystore_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:gravity="right"
                    android:minWidth="200px"
                    android:text="辽宁 沈阳"
                    android:textColor="@color/white"
                    android:textSize="23px"/>

                <TextView
                    android:id="@+id/mystore_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:minWidth="200px"
                    android:text="成交量1200"
                    android:textColor="@color/white"
                    android:textSize="23px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mystore_work_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:gravity="right"
                    android:minWidth="200px"
                    android:text="10年工作经验"
                    android:textColor="@color/white"
                    android:textSize="23px"/>

                <TextView
                    android:id="@+id/mystore_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:minWidth="200px"
                    android:text="擅长田园风格"
                    android:textColor="@color/white"
                    android:textSize="23px"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white"
        app:xTabIndicatorColor="#4EBE65"
        app:xTabIndicatorHeight="1.5dp"
        app:xTabIndicatorWidth="50dp"
        app:xTabMode="fixed"
        app:xTabSelectedTextColor="#4EBE65"
        app:xTabSelectedTextSize="12dp"
        app:xTabTextColor="#000000"
        app:xTabTextSize="12dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>