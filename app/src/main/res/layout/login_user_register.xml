<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_forgetpwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_user_photo"
            style="@style/EtStyle"
            android:hint="请输入您的手机号"
            android:inputType="number"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:background="@drawable/hengxian_green"/>

        <EditText
            android:id="@+id/et_user_random_num"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="20px"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="随机数"
            android:textSize="24px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:background="@drawable/hengxian_green"/>

        <EditText
            android:id="@+id/et_new_psw"
            style="@style/EtStyle"
            android:hint="请输入您的新密码"
            android:inputType="numberPassword"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:background="@drawable/hengxian_green"/>

        <EditText
            android:id="@+id/et_again_new_psw"
            style="@style/EtStyle"
            android:hint="请确认你的新密码"
            android:inputType="numberPassword"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:background="@drawable/hengxian_green"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="20px">

            <EditText
                android:id="@+id/et_verification"
                android:layout_width="300px"
                android:layout_height="86px"
                android:layout_marginLeft="40px"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textSize="24px"/>

            <View
                android:layout_width="300px"
                android:layout_height="4px"
                android:layout_below="@+id/et_verification"
                android:background="@drawable/hengxian_green"/>

            <View
                android:layout_width="1px"
                android:layout_height="70px"
                android:layout_gravity="center"
                android:layout_marginRight="30px"
                android:layout_marginTop="5px"
                android:layout_toRightOf="@+id/et_verification"
                android:background="@color/line"/>

            <Button
                android:id="@+id/tv_get_verification"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50px"
                android:background="@null"
                android:gravity="center"
                android:lines="1"
                android:text="获取验证码"
                android:textColor="@color/colorAccent"
                android:textSize="24px"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/bt_register_login"
                android:layout_width="520px"
                android:layout_height="80px"
                android:background="@drawable/shape_all_my_moneybag"
                android:text="完成注册"
                android:textColor="@android:color/white"
                android:textSize="30px"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
