<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/container_rl"
        android:layout_width="match_parent"
        android:layout_height="867px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210px">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="27px"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/transparent"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/view"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_toRightOf="@+id/ll_image"
                        android:orientation="vertical"
                        android:paddingLeft="250px"
                        android:paddingTop="30px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥35"
                            android:textColor="@color/colorAccent"
                            android:textSize="24px"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:text="库存1210件"
                            android:textColor="@color/black"
                            android:textSize="24px"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:text="请选择 颜色分类"
                            android:textColor="@color/black"
                            android:textSize="24px"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_image"
                    android:layout_width="210px"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="18px"
                    android:background="@drawable/white_bg_shoppingcart"
                    android:elevation="2dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:scaleType="fitXY"
                        android:src="@drawable/product_head"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/close_rl"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="27px">

                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:layout_centerInParent="true"
                        android:src="@drawable/guanbi"/>

                </RelativeLayout>


            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="48px"
                        android:text="颜色分类"
                        android:textColor="@color/black"
                        android:textSize="30px"/>

                    <com.ygc.estatedecoration.widget.FlowLayout
                        android:id="@+id/flow_layout_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_marginTop="25px"
                        android:padding="5dp"
                        app:height_space="10dp"
                        app:width_space="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_marginTop="25px"
                        android:background="@color/line"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="48px"
                        android:text="规格"
                        android:textColor="@color/black"
                        android:textSize="30px"/>

                    <com.ygc.estatedecoration.widget.FlowLayout
                        android:id="@+id/flow_layout_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_marginTop="25px"
                        android:padding="5dp"
                        app:height_space="10dp"
                        app:width_space="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_marginTop="25px"
                        android:background="@color/line"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="95px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:text="购买数量"
                            android:textColor="@color/black"
                            android:textSize="28px"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="50px"
                                android:layout_height="50px"
                                android:src="@drawable/jianhao"/>

                            <TextView
                                android:layout_width="55px"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10px"
                                android:layout_marginRight="10px"
                                android:gravity="center"
                                android:text="1"/>

                            <ImageView
                                android:layout_width="50px"
                                android:layout_height="50px"
                                android:src="@drawable/jiahao"/>

                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="10px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:background="@color/line"/>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_true"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="34px"/>
    </RelativeLayout>
</LinearLayout>