<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="405px"
        android:background="@drawable/zhuyebackgrund">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20px"
            android:layout_marginTop="68px"
            android:padding="10px"
            android:src="@drawable/fanhuiwhite"/>

        <com.ygc.estatedecoration.widget.CircleImageView
            android:id="@+id/iv_company_icon"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150px"
            android:src="@drawable/zhuyetouxiang"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_company_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24px"
            android:text="公司名称"
            android:textColor="@color/white"
            android:textSize="36px"/>
    </RelativeLayout>

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white"
        app:xTabIndicatorColor="#4EBE65"
        app:xTabIndicatorHeight="1.5dp"
        app:xTabIndicatorWidth="50dp"
        app:xTabMode="fixed"
        app:xTabSelectedTextColor="#4EBE65"
        app:xTabSelectedTextSize="12dp"
        app:xTabTextColor="#000000"
        app:xTabTextSize="12dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>