<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="344px"
        android:background="@drawable/zhuyebackgrund">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="17px"
            android:layout_height="30px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20px"
            android:layout_marginTop="25px"
            android:src="@drawable/fanhui"/>

        <com.ygc.estatedecoration.widget.CircleImageView
            android:id="@+id/iv_company_icon"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginTop="80px"
            android:layout_centerHorizontal="true"
            android:src="@drawable/zhuyetouxiang"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_company_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24px"
            android:text="公司名称"
            android:textColor="@color/white"
            android:textSize="36px"/>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorAccent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>