<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px">

        <com.ygc.estatedecoration.widget.CircleImageView
            android:id="@+id/iv_icon_show"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@drawable/zhuyetouxiang"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/iv_icon_show"
            android:text="昵称"
            android:textColor="@color/black"
            android:textSize="32px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25px"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="2017.11.14"
                android:textSize="25px"/>

            <com.ygc.estatedecoration.widget.StarView
                android:id="@+id/starview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:starCount="5"
                app:starFill="@drawable/xingxing"
                app:starHalf="@drawable/xingxing"
                app:starImageSize="25px"
                app:starPadding="5px"
                app:starStep="1.5"
                app:stepSize="Half"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="25px"
        android:ellipsize="end"
        android:lines="3"
        android:text="用户评价，用户评价，用户评价，用户评价，用户评价，用户评价，用户评价，用户评价，用户评价，用户评价，用户评价，用户评价，用户评价，用户评价，"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20px"
        android:background="@color/line"/>

</LinearLayout>