<?xml version="1.0" encoding="utf-8"?>
<!--主页-交易管理页面-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">
        <!--标题栏-->
        <ImageView
            android:id="@+id/back"
            android:layout_width="62px"
            android:layout_height="62px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:paddingLeft="10px"
            android:paddingRight="20px"
            android:scaleType="centerInside"
            android:src="@drawable/fanhui"/>

        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/tablayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:xTabIndicatorColor="#4EBE65"
            app:xTabIndicatorHeight="1.5dp"
            app:xTabIndicatorWidth="50dp"
            app:xTabMode="fixed"
            app:xTabSelectedTextColor="#4EBE65"
            app:xTabSelectedTextSize="17dp"
            app:xTabTextColor="#000000"
            app:xTabTextSize="17dp"/>

        <ImageView
            android:id="@+id/iv_follow"
            android:layout_width="62px"
            android:layout_height="62px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:paddingLeft="10px"
            android:paddingRight="20px"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                android:src="@drawable/dianhua"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:text="打电话"
                android:textSize="18px"/>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="44px"
                android:layout_height="44px"
                android:src="@drawable/liuyan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:text="留言"
                android:textSize="18px"/>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line"/>

        <TextView
            android:id="@+id/tv_offer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="报价"
            android:textColor="@color/white"
            android:textSize="28px"/>
    </LinearLayout>
</LinearLayout>