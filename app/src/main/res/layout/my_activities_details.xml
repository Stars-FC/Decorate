<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/my_activites_details_image"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:scaleType="fitXY"
        android:src="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.ygc.estatedecoration.widget.CircleImageView
            android:layout_width="65px"
            android:layout_height="65px"
            android:layout_marginLeft="25px"
            android:src="@drawable/touxiangxuqiubaojia"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="18px"
            android:gravity="center_vertical"
            android:text="邓颖"
            android:textColor="@color/black"
            android:textSize="28px"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:paddingLeft="22px"
        android:paddingRight="28px">

        <TextView
            android:id="@+id/activites_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="活动标题"
            android:textColor="@color/black"
            android:textSize="27px"/>

        <TextView
            android:id="@+id/my_activites_details_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/activites_tv_title"
            android:gravity="right|center_vertical"
            android:minWidth="300px"
            android:text="活动标题"
            android:textColor="@color/color_a1a1a1"
            android:textSize="27px"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:paddingLeft="22px"
        android:paddingRight="28px">

        <TextView
            android:id="@+id/activites_tv_starttime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="活动开始时间"
            android:textColor="@color/black"
            android:textSize="27px"/>

        <TextView
            android:id="@+id/my_activites_details_startime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/activites_tv_starttime"
            android:gravity="right|center_vertical"
            android:minWidth="300px"
            android:text="活动开始时间"
            android:textColor="@color/color_a1a1a1"
            android:textSize="27px"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:paddingLeft="22px"
        android:paddingRight="28px">

        <TextView
            android:id="@+id/activites_tv_endtime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="活动结束时间"
            android:textColor="@color/black"
            android:textSize="27px"/>

        <TextView
            android:id="@+id/my_activites_details_endtime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/activites_tv_endtime"
            android:gravity="right|center_vertical"
            android:minWidth="300px"
            android:text="活动结束时间"
            android:textColor="@color/color_a1a1a1"
            android:textSize="27px"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:paddingLeft="22px"
        android:paddingRight="28px">

        <TextView
            android:id="@+id/activites_tv_place"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="活动地点"
            android:textColor="@color/black"
            android:textSize="27px"/>

        <TextView
            android:id="@+id/my_activites_details_place"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/activites_tv_place"
            android:gravity="right|center_vertical"
            android:minWidth="300px"
            android:text="活动地点"
            android:textColor="@color/color_a1a1a1"
            android:textSize="27px"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <TextView
        android:id="@+id/my_activites_details_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:paddingLeft="22px"
        android:paddingRight="28px"
        android:text="活动介绍，活动介绍，活动介绍，活动介绍，活动介绍活动介绍，活动介绍活动介绍，活动介绍，活动介绍，活动介绍，活动介绍，活动介绍……"
        android:textColor="@color/color_a1a1a1"
        android:textSize="27px"/>

</LinearLayout>
